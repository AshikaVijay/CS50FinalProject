<div class="container">  
<h1 style="text-align:center"> Medications Summary </h1>

<div class="container">
  <div class="row custyle" style="width:100%">
  <table class="table table-striped custab">  
  <thead>
    <%#= link_to 'Add New Medication', new_medication_path %>
    <a href="<%= new_medication_path %>" class="btn btn-primary btn-xs pull-right"><b>+</b> Add New Medication</a>

    <tr style="text-align:center">
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Dose(mg)</th>
      <th>Notes</th>
    </tr>
  </thead>  
   <% @medications.each do |m| %>
    <tr align="center">
      <td><%= m.name %></td>
      <td><%= m.start_date %></td>
      <td><%= m.end_date %></td>
      <td><%= m.dose %></td>
      <td><%= m.notes %></td>

      <td class="text-center"><a class='btn btn-info btn-xs' href="<%= edit_medication_path(m)%>"> Edit</a>
      <%= link_to 'Delete', medication_path(m),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this medication?' }, class: 'btn btn-danger btn-xs' %></td> 
      </tr>
    <% end %>

</table>

</div>

