
<%= link_to 'Add New Medication', new_medication_path %>

<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<h1 style="text-align:center"> Medications Summary </h1>

<table id="data-table" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Dose</th>
      <th>Notes</th>
    </tr>
  </thead>  
     <% @medications.each do |m| %>
      <tr align="center">
        <td><%= m.name %></td>
        <td><%= m.start_date %></td>
        <td><%= m.end_date %></td>
        <td><%= m.dose %></td>
        <td><%= m.notes %></td>
        <td><%= link_to 'Edit', edit_medication_path(m) %></td>
        <td><%= link_to 'Delete', medication_path(m),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
  <% end %>

</table>
